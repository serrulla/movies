<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ericsg1.movies" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="SQLitePlugin">
        <param name="android-package" value="io.sqlc.SQLitePlugin" />
    </feature>
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <name>MyMovies (EricS)</name>
    <description>
       Powered by TheMovieDB - Designed by Eric S.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
       TheMovieDB
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />
    <icon density="ldpi" src="res/icon/android/icon.png" />
    <icon density="mdpi" src="res/icon/android/icon.png" />
    <icon density="hdpi" src="res/icon/android/icon.png" />
    <icon density="xhdpi" src="res/icon/android/icon.png" />
    <splash density="port-ldpi" src="res/screen/android/screen-xhdpi-portrait.png" />
    <splash density="port-mdpi" src="res/screen/android/screen-xhdpi-portrait.png" />
    <splash density="port-hdpi" src="res/screen/android/screen-xhdpi-portrait.png" />
    <splash density="port-xhdpi" src="res/screen/android/screen-xhdpi-portrait.png" />
    <splash density="port-xxhdpi" src="res/screen/android/screen-xhdpi-portrait.png" />
    <splash density="port-xxxhdpi" src="res/screen/android/screen-xhdpi-portrait.png" />
    <preference name="loglevel" value="DEBUG" />
</widget>
